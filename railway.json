{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "nixpacksConfig": {
    "phases": {
      "setup": {
        "cmds": [
          "apt-get update -y",
          "apt-get install -y ffmpeg",
          "ffmpeg -version"
        ]
      },
      "install": {
        "cmds": [
          "npm install"
        ]
      }
    }
  }
}
